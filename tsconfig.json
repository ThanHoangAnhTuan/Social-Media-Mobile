{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "paths": {
            "@/*": ["./*"],
            "@app/*": ["./src/app/*"],
            "@components/*": ["./src/components/*"],
            "@navigation/*": ["./src/navigation/*"],
            "@screens/*": ["./src/screens/*"],
            "@utils/*": ["./src/utils/*"],
            "@assets/*": ["./src/assets/*"],
            "@hooks/*": ["./src/hooks/*"],
            "@constants/*": ["./src/constants/*"],
            "@services/*": ["./src/services/*"],
            "@context/*": ["./src/context/*"],
            "@lib/*": ["./src/lib/*"]
        }
    }
}
